@if (Request.QueryString["Theme"] != null) {
    <script>
        $(function(){
            $.cookie('Theme', '@Request.QueryString["Theme"]');
        });
    </script>
}
    <script>
        $('.theme-picker').each(function () {
            $(this).click(function () {
                var theme = $(this).attr('data-theme');
                $.cookie('Theme', theme);
                window.location = '/'; //location.reload(true);
            });
        });
    </script>